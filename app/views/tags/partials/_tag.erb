<div data-tag-id="<%=tag.id %>" class="tab_section2">
  <div class="row mt-3">
    <div class="col">
      <%= tag.name %>
    </div>
    <div class="col">
      <%= link_to 'Delete', tag_path(id: tag.id),remote: true, method: :delete, data: {confirm: "You sure?"}, role: 'button', class: 'btn btn-danger ml-2r' %>
    </div>
    <div class="col">
      <%= link_to 'Edit', edit_tag_path(id: tag.id), method: :get,role: 'button', class: 'btn btn btn-primary' %>
    </div>
  </div>
  <hr/>
</div>