<div style="background:transparent !important" class="jumbotron text-center">
  <div class='container'>
    <div class="tag_errors">
    </div>
    <div class="tag_edited">
    </div>
    <h3> Create a tag </h3>
    <%= render './tags/partials/form'%>
    <br><br>

    <div class="row mt-3">
      <div class="col">
        <h4>Name</h4>
      </div>
      <div class="col">
        <h4>Delete</h4>
      </div>
      <div class="col">
        <h4>Edit</h4>
      </div>
    </div>
    <hr/>

    <div class="tag_section">
      <% @tags.each do |tag| %>
        <%= render 'tags/partials/tag', tag: tag%>
      <% end %>
    </div>

  </div>
</div>

