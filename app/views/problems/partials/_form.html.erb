	<div class="container">
		<%= bootstrap_form_for @problem, qlabel_errors: true, html: { id: 'new_problem_id', class: 'form-group' } do |f| %>
		  	<%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
		  	<%= f.text_area :content, cols: 5, rows: 5, placeholder: 'Content', class: 'form-control' %>
		 	<%= f.text_area :reference_list, cols: 5, rows: 5, placeholder: 'Insert here references', class: 'form-control' %>

		 	<%= f.collection_select :tag_ids, Tag.all, :id, :name,{}, { multiple: true, class: 'chosen-select' }  %>

		  	<%= f.collection_select :user_ids, @all_users_mapped, :id, :name,{}, { multiple: true, class: 'chosen-select' } %>

			 <div class="form-check">
				<%= f.check_box :status, label: 'Make my post visible to other users' %>
			  </div>
		  	<%= f.submit 'Save', class: "btn btn-success" %>
		<% end %>
	</div>