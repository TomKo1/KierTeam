<div style="background:transparent !important" class="jumbotron">
  <div class='container'>
    <% if @problems.empty? %>
        <ul class='list-group'>
          <li class='list-group-item'>It looks as if you have to fix it on your own :(</li>
        </ul>
      <% else %>
        <ul class='list-group'>
          <%= will_paginate @problems, class: 'digg_pagination' %>
            <% @problems.each do |problem| %>
             <% if problem.status? %>
              <li class='list-group-item'><%= render 'problems/partials/single_result', problem: problem %></li>
              <hr />
            <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>