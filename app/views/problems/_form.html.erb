<%= form_for @problem, html: { class: 'form-group' } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
  <%= f.label :content %>
  <%= f.text_area :content, cols: 5, rows: 5, placeholder: 'Content', class: 'form-control' %>
  <%= f.label :references %>
  <%= f.text_area :references, cols: 5, rows: 5, placeholder: 'Insert here references', class: 'form-control' %>
  <%= f.fields_for :problem_users, ProblemUser.new  do |problem_form| %>
    <%= problem_form.label :user_id %>
    <%= problem_form.select :user_id, options_for_select( @all_users_mapped)  %>
  <% end %>
  <%= f.submit 'Save', class: 'btn btn-primary mt-2' %>
<% end %>