<div class='jumbotron'>
<div class='container'>
    
    <h1 class='text-center'><%= @problem.title %></h1>
        <table class='table'>
            <tbody>
                <tr>
                    <th scope='row'>Title:</th>
                    <td><%= @problem.title %></td>
                </tr>
                <tr>
                    <th scope='row'>Content:</th>
                    <td><%= @problem.content %></td>
                </tr>
                <tr>
                    <th scope='row'>References:</th>
                    <td><%= @problem.references %></td>
                </tr>

                <tfoot>
                    <tr>
                        <% if current_user.id == @creator_id %>
                            <%=  link_to 'Delete my problem', problem_remove_path(id: @problem.id), method: :delete, data: {confirm: "You sure?"} %>
                        <% end %>
                    </tr>
                </tfoot>
            </tbody>
        </table>

          <%= render 'comment_section', comments: @comments %>

                <div class="container">
                  <div class="commentSection-add">
                    <h3 class="commentSection-title">Add comment</h3>
                    <%= render 'comments/form', object: @comment, errors: @comment_errors, locals: { problem_id: @problem.id, users: @users } %>
                    <hr/>
                  </div>
                </div>
                <div class="container">
                  <%= link_to 'Back', problems_path, role: 'button', class: 'btn btn-primary' %>
                </div>

</div>
</div>