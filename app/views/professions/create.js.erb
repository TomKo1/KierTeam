<% if @profession.persisted? %>
  $('.profession_errors').empty();
  $('.profession_section').append("<%= j render 'professions/partials/profession', profession: @profession %>");
<% else %>
  $('.profession_errors').empty();
  $('.profession_errors').append("<%= j render 'professions/partials/form_errors', profession: @profession %>");
  $('.profession_errors').delay(5000).fadeOut('slow');
<% end %>

$('.new_profession').find('input[type="text"], input[type="number"]').val('');
