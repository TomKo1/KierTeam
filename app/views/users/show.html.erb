<div style="background:transparent !important" class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
           <div class="row">
              <div class="col-md-12 lead "><h3>User profile</h3><hr></div>
            </div>
          <div class="row">
            <div class="col-md-4 text-center">
              <%= image_tag @user_img %>

            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-12">
                  <h1 class="only-bottom-margin"><%= "#{@user.full_name}" %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="text-muted">Email:</span> <%= "#{@user.email}" %><br>
                  <% if @user.profession!=nil %><span class="text-muted">Position:</span><%= " #{@user.profession.name}" %><br>
                  <% end %>
                  <small class="text-muted"><%= "#{@user.created_at}" %></small>
                </div>
                <div class="col-md-6">
                     <% if user_signed_in? %>
                        <% if current_user.id==@user.id || current_user.is_admin==true%>

                             <%= link_to "Edit Profile", edit_user_registration_path, role: 'button', class: 'btn btn-primary' %>
                        <% end %>
                  <% end %>

                  </div>
                </div>
              </div>
            </div>
            <hr/>
               <h2> Created_problems: </h2>
                <%= render './users/partials/profile_posts_tabs', not_posted: @problems_not_posted, posted: @problems_posted %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 </div>
