<div class="comment_form_errors"></div>

<div class="comment_new">
  <%= form_for @comment, remote: true do |f| %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :title, class: 'input-group-text' %>
      </div>
    <%= f.text_field :title, input_html: { rows: "2" }, class: 'form-control' %>
    </div>
    </hr>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :content, class: 'input-group-text' %>
      </div>
    <%= f.text_area :content, size: '24x6', class: 'form-control' %>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label "References", class: 'input-group-text' %>
      </div>
    <%= f.text_field :reference_list, class: 'form-control' %>
    </div>

    <%= f.hidden_field(:problem_id, value: locals[:problem_id]) %>
    <%= f.submit class: 'btn btn-primary col-md-2 offset-md-10' %>
  <% end %>
</div>